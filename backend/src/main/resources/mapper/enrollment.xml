<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lms.mapper.EnrollmentMapper">

    <!-- 학생ID를 이용한 수강 목록 정보 조회 -->
    <select id="selectEnrollmentById" resultType="com.lms.entity.Course">
        SELECT T2.ID
             , T2.TITLE
          FROM ENROLLMENTS T1
          LEFT OUTER JOIN COURSES T2
              ON T1.COURSE_ID = T2.ID
         WHERE T1.STUDENT_ID = #{studentId}
        ORDER BY TITLE ASC
    </select>
</mapper>