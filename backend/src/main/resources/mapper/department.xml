<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lms.mapper.DepartmentMapper">

    <!-- 학생ID를 이용한 학과 조회 -->
    <select id="selectDepartmentById" resultType="com.lms.entity.Department">
        SELECT ID
             , DEPT_NAME
          FROM DEPARTMENTS
         WHERE ID = #{studentId}
    </select>
</mapper>